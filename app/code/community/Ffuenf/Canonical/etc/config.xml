<config>
    <modules>
        <Ffuenf_Canonical>
            <version>1.0.0</version>
        </Ffuenf_Canonical>
    </modules>
    <global>
        <helpers>
            <ffuenf_canonical>
                <class>Ffuenf_Canonical_Helper</class>
            </ffuenf_canonical>
        </helpers>
        <resources>
            <canonical_setup>
                <setup>
                    <module>Ffuenf_Canonical</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </canonical_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <ffuenf_canonical>
                    <file>ffuenf/canonical.xml</file>
                </ffuenf_canonical>
            </updates>
        </layout>
    </frontend> 
    <adminhtml>
        <layout>
            <updates>
                <ffuenf_canonical>
                    <file>ffuenf/canonical.xml</file>
                </ffuenf_canonical>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <canonical>
            <general>
                <enable>0</enable>
            </general>
        </canonical>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Ffuenf_Canonical/>
            </modules>
        </suite>
    </phpunit>
</config>